{
  "name": "@veriksystems/node-commons",
  "version": "2.0.7",
  "description": "Verik Nodejs common libs for nestjs",
  "license": "MIT",
  "author": "Veriksystems team",
  "repository": {
    "type": "git",
    "url": "git@github.com:verik-systems/node-commons.git"
  },
  "bugs": {
    "url": "https://github.com/verik-systems/node-commons/issues"
  },
  "homepage": "https://github.com/verik-systems/node-commons#readme",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "typings"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist coverage",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "release": "release-it --ci",
    "typecheck": "tsc --project tsconfig.lint.json --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,yaml,yml,json}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "npm run lint",
      "prettier --write"
    ],
    "README.md": [
      "markdown-toc -i",
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all",
    "printWidth": 120
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "file": "./ad-hocs/mocha/plugins.ts",
    "recursive": true,
    "require": [
      "ts-node/register",
      "./ad-hocs/mocha/hooks.ts"
    ],
    "sort": true,
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  },
  "c8": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "~17.0.3",
    "@commitlint/config-conventional": "~17.0.3",
    "@nestjs/cli": "~9.0.0",
    "@nestjs/common": "~9.0.9",
    "@nestjs/core": "~9.0.9",
    "@nestjs/platform-express": "~9.0.9",
    "@nestjs/platform-fastify": "~9.0.9",
    "@nestjs/schematics": "~9.0.1",
    "@nestjs/testing": "~9.0.9",
    "@release-it/conventional-changelog": "^5.0.0",
    "@semantic-release/changelog": "~6.0.1",
    "@semantic-release/git": "~10.0.1",
    "@types/chai": "~4.3.3",
    "@types/chai-as-promised": "~7.1.5",
    "@types/eslint": "~8.4.5",
    "@types/express": "~4.17.13",
    "@types/express-serve-static-core": "~4.17.30",
    "@types/lodash": "^4.14.182",
    "@types/mkdirp": "^1.0.2",
    "@types/mocha": "~9.1.1",
    "@types/node": "~18.7.2",
    "@types/prettier": "~2.7.0",
    "@types/response-time": "^2.3.5",
    "@types/rimraf": "~3.0.2",
    "@types/sinon": "~10.0.13",
    "@types/sinon-chai": "~3.2.8",
    "@types/supertest": "~2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "~5.33.0",
    "@typescript-eslint/parser": "~5.33.0",
    "@willsoto/nestjs-prometheus": "~4.7.0",
    "c8": "~7.12.0",
    "chai": "~4.3.6",
    "chai-as-promised": "~7.1.1",
    "eslint": "~8.21.0",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "lint-staged": "~13.0.3",
    "markdown-toc": "~1.2.0",
    "mocha": "~10.0.0",
    "nestjs-pino": "^3.1.1",
    "pino": "^8.4.0",
    "pino-http": "^8.2.0",
    "pino-pretty": "^9.0.0",
    "prettier": "~2.7.1",
    "prettier-package-json": "~2.6.4",
    "prettier-plugin-organize-imports": "~3.0.3",
    "prettier-plugin-packagejson": "~2.2.18",
    "prom-client": "~14.0.1",
    "reflect-metadata": "~0.1.13",
    "release-it": "^15.3.0",
    "rimraf": "~3.0.2",
    "rxjs": "~7.5.6",
    "semantic-release": "~19.0.3",
    "sinon": "~14.0.0",
    "sinon-chai": "~3.7.0",
    "standard-version": "~9.5.0",
    "supertest": "~6.2.4",
    "ts-node": "~10.9.1",
    "typescript": "~4.7.4",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^9.0.0",
    "@willsoto/nestjs-prometheus": "~4.7.0",
    "nestjs-pino": "^3.1.1",
    "pino": "^8.4.0",
    "pino-http": "^8.2.0",
    "pino-pretty": "^9.0.0",
    "prom-client": "^14.0.1"
  },
  "dependencies": {
    "@sqltools/formatter": "^1.2.3",
    "mkdirp": "^1.0.4",
    "response-time": "^2.3.2",
    "typeorm": "^0.3.7",
    "yargs": "^17.5.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "16.13.0",
    "npm": "8.1.2"
  }
}
